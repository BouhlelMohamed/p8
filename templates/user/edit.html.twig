{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    {{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}
        <div class="form-group">
            <label>Nom d'utilisateur :</label>
            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Adresse email :</label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Roles :</label>
            {{ form_widget(form.roles, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
    {{ form_end(form) }}
    <br>
    <hr>
    {{ form_start(passwordForm, {'action' : path('user_edit_password', {'id' : user.id})}) }}
        <div class="form-group">
            <label>Mot de passe :</label>
            {{ form_widget(passwordForm.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            <label>Tapez le mot de passe Ã  nouveau :</label>
            {{ form_widget(passwordForm.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(passwordForm._token) }}
        <button type="submit" class="btn btn-success pull-right">Modifier le mot de passe</button>
    {{ form_end(form) }}

{% endblock %}
